extends layout.pug

block content
    header.header.header-bgi-home
        include components/header
    main.home.flex.flex-fd-col.flex-jc-sa.flex-ai-c
        h3 All our room types are including complementary breakfast
        .card.flex.flex-jc-sb.flex-ai-c
            .card__text.flex.flex-jc-sb.flex-fd-col
                .card__text__title
                    h5 Luxury redefined
                .card__text__subtitle
                    p Our rooms are designed to transport
                    | you into an environment made for leisure.
                    | Take your mind off the day-to-day of home
                    | life and find a private paradise for yourself.
                button.card__text__button.btn-hover EXPLORE
            .card__image.img1
        .card.flex.flex-jc-sb.flex-ai-c
            .card__text.flex.flex-jc-sb.flex-fd-col
                .card__text__title
                    h5 Leave your worries in the sand
                .card__text__subtitle
                    p We love life at the beach. Being close
                    | to the ocean with access to endless 
                    | sandy beach ensures a relaxed state 
                    | of mind. It seems like time stands 
                    | still watching the ocean.
                button.card__text__button.btn-hover EXPLORE
            .card__image.img2
        include components/testis
    include components/footer

